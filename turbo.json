{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "typegen": {
      "dependsOn": ["^typegen"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  },
  "globalDependencies": [".env.local"],
  "globalEnv": [
    "DATABASE_URL",
    "API_ORIGIN",
    "API_SECRET",
    "JWT_SECRET",
    "MIN_CLIENT_VERSION",
    "ACCESS_TOKEN_TTL_MINUTES",
    "REFRESH_TOKEN_TTL_DAYS",
    "ADMIN_BASIC_AUTH_USERNAME",
    "ADMIN_BASIC_AUTH_PASSWORD",
    "EMAIL_SENDER",
    "POSTMARK_API_KEY",
    "POSTMARK_MESSAGE_STREAM",
    "STORE_ID_IOS",
    "STORE_ID_ANDROID",
    "NEON_API_KEY",
    "NEON_PROJECT_ID_TEST",
    "DEV_DEVICE_IOS",
    "DEV_DEVICE_ANDROID",
    "DEV_VERIFICATION_PRIVATE_CODE",
    "VERCEL_AUTOMATION_BYPASS_SECRET"
  ]
}
